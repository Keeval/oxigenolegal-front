extends ../../../html/layouts/layout_default

block navigation
	include ../../../html/structure/navigation/navigation_treatments_interior

block modal__inner
	div#modal__inner

		a(href="/es/tratamientos/")#modal__back
			span Volver

		div#modal__content
			div#modal__content__inner

				div.modal__content__heading
		
					h1 #[span.modal__content__heading__parent Tratamientos] #[span.modal__content__heading__sep :] Odontología y Cirugía Oral
					div.modal__heading__intro
						p Realizamos todo tipo de cirugías en la boca con amplia experiencia: extracción de cordales, de caninos incluídos, apicectomías, implantes, injertos de hueso, etc.
						
				div.module.module--wysiwyg

					hr
						
					h2 Casos reales

					h3 Caso 1: Rehabilitación en maxilar superior con implantes.
					
					div.gallery.gallery-columns-3
						section.gallery-item
							div.gallery-icon
								a(href="/img/cirugia-oral-caso1-01.jpg" title="Caso 1 - Antes del tratamiento.")
									img(src="/img/cirugia-oral-caso1-01.jpg" width="640" height="336" alt="Caso 1 - Antes del tratamiento.")
							figure.wp-caption-text.gallery-caption Antes del tratamiento.
						section.gallery-item
							div.gallery-icon
								a(href="/img/cirugia-oral-caso1-02.jpg" title="Caso 1 - Después del tratamiento.")
									img(src="/img/cirugia-oral-caso1-02.jpg" width="640" height="432" alt="Caso 1 - Después del tratamiento.")
							figure.wp-caption-text.gallery-caption Después del tratamiento.
						br(style="clear: both")
						br(style="clear: both")

					h3 Caso 2: Rehabilitación superior e inferior con implantes.
					
					div.gallery.gallery-columns-3
						section.gallery-item
							div.gallery-icon
								a(href="/img/cirugia-oral-caso2-01.jpg" title="Caso 2 - Caso acabado.")
									img(src="/img/cirugia-oral-caso2-01.jpg" width="640" height="336" alt="Caso 2 - Caso acabado.")
							figure.wp-caption-text.gallery-caption Caso acabado.
						br(style="clear: both")
						br(style="clear: both")

				include ../../../html/modules/module-quotes/module-quotes-treatments-odontologia
